package Class;
import java.util.Scanner;
class exercise1 {

	public static void main(String[] args) {
		// TODO Auto-generated method stub
		
		//Guna scanner input, masukkan satu nombor integer. 
		//Bahagikan nomber tersebut dengan 5, jika ia berbaki dengan 0, maka print nomber tersebut adalah odd.
		//Bahagikan nombor tersebut dengan 2, jika baklinya adalah kosong, maka print nomber tersebut ialah even

		double number;
		Scanner scan = new Scanner(System.in);
		System.out.println("Enter your integer: ");
		number = scan.nextDouble();
		System.out.println("Your number is :"+ number);
		
		if (number%5 != 0)//if not equal to 0
		System.out.println("This is a odd number");
		else if(number%2 == 0)//if equal to 0
		System.out.println("This is a even number");
		
		
		
		
	}

}
